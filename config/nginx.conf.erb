# ルートコンテキスト
# Workerプロセスは1つ
worker_processes  1;

# eventsコンテキスト：必須
events {
	worker_connections 512; #コネクション数の制限
}

# httpコンテキスト：必須
http {
	# ログ出力設定
	access_log nginx_access.log;
	error_log  nginx_errors.log;
	upstream application_server {
		server unix:/tmp/nginx.socket fail_timeout=0;
	}

    server {
    	listen  <%= ENV["PORT"] %>;        # ポートはherokuが用意したものを利用
    	server_name INFRA-PRACTICE-NGINX;  # INFRA-PRACTICE-NGINXという名前のサーバ
		charset UTF-8;                     # ヘッダの文字コードはUTF-8

		proxy_set_header    Host                  $host;   # Hostというところは$host変数をいれて送る
        proxy_set_header    X-Forwarded-Host      $host;

		# /のルートにきた時にunix:/tmp/nginx.socketを通じてリバースプロキシする
    	location / {
        	proxy_pass http://application_server;
    	}

		location /health {
        	proxy_pass http://application_server/health;
    	}
    }
}
